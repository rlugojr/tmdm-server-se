<datasources xmlns="http://www.talend.com/mdm/datasources">
    <datasource name="H2-Default">
        <master>
            <type>RDBMS</type>
            <rdbms-configuration>
                <dialect>H2</dialect>
                <connection-driver-class>org.h2.Driver</connection-driver-class>
                <connection-url>jdbc:h2:./data/h2_default_master</connection-url>
                <case-sensitive-search>false</case-sensitive-search>
                <schema-generation>create</schema-generation>
                <properties>
                    <property name="hibernate.dbcp.maxTotal">300</property>
                </properties>
            </rdbms-configuration>
        </master>
        <staging>
            <type>RDBMS</type>
            <rdbms-configuration>
                <dialect>H2</dialect>
                <connection-driver-class>org.h2.Driver</connection-driver-class>
                <connection-url>jdbc:h2:./data/h2_default_staging</connection-url>
                <schema-generation>create</schema-generation>
            </rdbms-configuration>
        </staging>
        <system>
            <type>RDBMS</type>
            <rdbms-configuration>
                <dialect>H2</dialect>
                <connection-driver-class>org.h2.Driver</connection-driver-class>
                <connection-url>jdbc:h2:./data/h2_default_system</connection-url>
                <case-sensitive-search>false</case-sensitive-search>
                <schema-generation>create</schema-generation>
                <properties>
                    <property name="hibernate.dbcp.maxTotal">300</property>
                </properties>
            </rdbms-configuration>
        </system>
    </datasource>
    
